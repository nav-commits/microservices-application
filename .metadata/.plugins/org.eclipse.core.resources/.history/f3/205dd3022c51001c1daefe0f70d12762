package com.example.demo;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

public class ProductInfoMoreController {
	
	@Autowired
	ProductInfoMoreRepository productInfoMoreRepository;
	
	@PostMapping("/ProductInfoMore")
	public ProductInfoMore createProductPricing(@RequestBody ProductInfoMore productInfoMore) {
		productInfoMoreRepository.save(productInfoMore);
		return productInfoMore;
	}
	
	@GetMapping("/ProductInfo/{productid}")
	public Optional<ProductInfoMore> getProductInfo(@PathVariable Long productId) {
		return productInfoMoreRepository.findById(productId);

	}

}
