package com.example.demo;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

public class ProductInfoMoreController {
	
	@Autowired
	ProductInfoMoreRepository productInfoMoreRepository;
	
	@PostMapping("/ProductInfoMore")
	public ProductInfoMore createProductPricing(@RequestBody ProductInfoMore productInfoMore) {
		productInfoMoreRepository.save(productInfoMore);
		return productInfoMore;
	}
	

}
